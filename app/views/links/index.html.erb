<h1>Blue Coding Shortner</h1>

<%= form_with(url: "/new", method: :get, local: true, class: "form-horizontal") do |form| %>  
    <div class="form-group">
        <%= form.label :url, class: "col-sm-2 control-label"   %>
        <div class=" col-sm-10">
            <%= form.text_field :url, id: :url, class: 'form-control'%>
        </div>
    </div>      

  <div class="form-group col-lg-12">
    <%= form.submit 'Save', :class => 'btn btn-primary'%>
  </div>  
<% end %>

<%= @link.url if @link%>
